{
    "buildCommand": "npm run build:client",
    "outputDirectory": "dist/spa",
    "functions": {
        "api/**/*.ts": {
            "includeFiles": "{server,shared}/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/debug",
            "destination": "/api/debug.ts"
        },
        {
            "source": "/api/ping",
            "destination": "/api/ping.ts"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}