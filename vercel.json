{
    "buildCommand": "npm run build:client",
    "outputDirectory": "dist/spa",
    "functions": {
        "api/index.ts": {
            "includeFiles": "server/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}